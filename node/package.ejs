{
  "name": "<%= locals.name %>",
  "version": "0.0.0",
  "description": "<%= locals.description %>",
  "keywords": [
    "<%= locals.shortName %>"
  ],
  "main": "dist/<%= locals.shortName %>.cjs.js",
  "module": "dist/<%= locals.shortName %>.esm.js",<% if (locals.cli) { %>
  "bin": {
    "<%= locals.shortName %>": "bin/<%= locals.shortName %>.js"
  },<% } %>
  "types": "dist/<%= locals.shortName %>.d.ts",
  "files": [<% if (locals.cli) { %>
    "bin",<% } %>
    "dist"
  ],
  "scripts": {
    "dev": "node scripts/dev.js",
    "build": "node scripts/build.js",
    "lint": "eslint 'src/**/*.@(js|ts)' --fix",
    "format": "prettier --write 'src/**/*.@(js|ts)'",
    "test": "npm run test:once -- --watch",
    "test:once": "jest --runInBand --colors --forceExit",
    "coverage": "<% if (locals.github) { %>codecov<% } else { %>jest --coverage<% } %>",
    "release": "node scripts/release.js"
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "commander": "^7.2.0"<% if (locals.multiple) { %>,
    "leven": "^3.1.0"<% } %>
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@eljs/release": "0.7.3",
    "@microsoft/api-extractor": "^7.19.4",
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@types/fs-extra": "^9.0.3",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "chalk": "^4.1.2",<% if (locals.github) { %>
    "codecov": "^3.8.3",<% } %>
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "execa": "^5.1.1",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.4",
    "minimist": "^1.2.5",
    "prettier": "^2.5.1",
    "rollup": "^2.69.0",
    "rollup-plugin-typescript2": "^0.32.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.6.0",
    "tslib": "^2.3.1",
    "typescript": "4.5.5"
  },
  "repository": {
    "type": "git",
    "url": "<%= locals.gitUrl %>"
  },
  "homepage": "<%= locals.gitHref %>#readme",
  "bugs": {
    "url": "<%= locals.gitHref %>/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "{<% if (locals.cli) { %>bin<% } %>,src,__tests__}/**/*.{js,ts}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "author": "<%= locals.author %>",
  "publishConfig": {
    "registry": "<%= locals.registry %>",
    "access": "public"
  },
  "license": "MIT"
}
